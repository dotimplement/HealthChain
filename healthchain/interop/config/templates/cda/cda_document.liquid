{
  "ClinicalDocument": {
    "@xmlns": "urn:hl7-org:v3",
    "@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance",
    "id": {
      "@root": "{{ bundle.identifier.value | generate_id }}"
    },
    "code": {
      "@code": "{{ config.type.code }}",
      "@codeSystem": "{{ config.type.system }}",
      "@codeSystemName": "LOINC",
      "@displayName": "{{ config.type.display }}"
    },
    "title": "Clinical Document",
    "effectiveTime": {
      "@value": "{{ bundle.timestamp | format_timestamp }}"
    },
    "confidentialityCode": {
      "@code": "{{ config.confidentiality.code }}",
      "@codeSystem": "{{ config.confidentiality.system }}"
    },
    "languageCode": {
      "@code": "{{ config.language }}"
    },
    "component": {
      "structuredBody": {
        "component": {{ sections | json }}
      }
    }
  }
}
